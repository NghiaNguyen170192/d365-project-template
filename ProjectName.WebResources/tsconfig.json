{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "types": [],
    "target": "es6",
    "noImplicitAny": false,
    "strictNullChecks": true,
    "removeComments": false,
    "experimentalDecorators": true,
    //"declaration": true,
    "outDir": "out/entities",
    "sourceMap": false,
    "lib": [
      "dom",
      "es6"
    ],
    "noEmitOnError": true,
    "typeRoots" : ["./typings", "./typings/XRM"]
  },
  "include": [
    "src/**/*",
    "typings/*.d.ts",
    "typings/XRM/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
