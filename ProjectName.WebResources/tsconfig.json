{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "dom",
      "ESNext"
    ],
    "types": [
      "node",
      "xrm"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./out",
    "removeComments": false,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "ESNext",
    "baseUrl": "./",
    "paths": {
      "*": [
        "typings/*",
        "*"
      ]
    },
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Classic",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}